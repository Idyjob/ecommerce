{% trans_default_domain 'FOSUserBundle' %}


<div class="container">
    <div class="row">
        <div class="span12">
            <h2>Connexion</h2>
            <div id="collapseOne" class="accordion-body collapse in">
                <div class="accordion-inner">
                    <div class="col-md-4 col-lg-4">
                        <h4>Pas encore inscrit ?</h4>
                        <em>
                            nous vous invitons à vous inscrire<br />
                            afin de passer votre commande et de manger équilibré.
                        </em>
                    </div>

                    <div class="col-md-4 col-md-offset-2 col-lg-4 col-lg-offset-2">
                        <h4>Inscription</h4>
                        <form action="{{path('fos_user_registration_register')}}" class="form fos_user_registration_register"{{form_enctype(form)}} method="post">
                          {{ form_widget(form) }}


                              <input type="submit" value="{{ 'registration.submit'|trans }}" class="btn btn-primary" />


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
