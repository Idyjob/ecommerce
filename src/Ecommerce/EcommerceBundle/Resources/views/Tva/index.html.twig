
{% extends "::/layout/layout.html.twig" %}

{% block title %}{{ '%entity% list'|trans({'%entity%': 'Tva'}, 'admin') }} - {{ parent() }}{% endblock %}
{% block body %}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3 col-lg-3 col-sm-3 col-xs-3">


          {% include "UtilisateursBundle:Default:/modulesUsed/utilisateurConnecte.html.twig" %}


        </div>

        <div class="col-md-9 col-lg-9 col-sm-9 col-xs-9">
          {% render(controller('UtilisateursBundle:Default:flashMessages')) %}






{% macro thead(name, field, label) %}
    {% spaceless %}
        {% set sort = app.session.get('sort.' ~ name) %}
        {% if sort and sort.field == field %}
            {% if sort.type == 'DESC' %}
                <a href="{{ path('admin_tva_sort', {field: field, type: 'ASC'}) }}">{{ label }} <i class="fa fa-sort-down"></i></a>
            {% elseif sort.type == 'ASC' %}
                <a href="{{ path('admin_tva_sort', {field: field, type: 'DESC'}) }}">{{ label }} <i class="fa fa-sort-up"></i></a>
            {% endif %}
        {% else %}
            <a href="{{ path('admin_tva_sort', {field: field, type: 'ASC'}) }}">{{ label }} <i class="fa fa-sort"></i></a>
        {% endif %}
    {% endspaceless %}
{% endmacro %}

{% from _self import thead %}



 
    <h1>{{ '%entity% list'|trans({'%entity%': 'Tva'}, 'admin') }}</h1>

    {% include 'EcommerceBundle:Tva:filter.html.twig' with {form: form} %}

    <table class="table table-striped table-hover table-bordered records_list">
        <thead>
            <tr>
                <th scope="col">{{ thead('tva', 'id', 'Id') }}</th>
                <th scope="col">{{ thead('tva', 'multiplicate', 'Multiplicate') }}</th>
                <th scope="col">{{ thead('tva', 'nom', 'Nom') }}</th>
                <th scope="col">{{ thead('tva', 'valeur', 'Valeur') }}</th>
                <th scope="col">{{ 'Actions'|trans({}, 'admin') }}</th>
            </tr>
        </thead>
        <tbody>
            {% for tva in paginator %}
                <tr>
                    <td><a href="{{ path('admin_tva_show', {id: tva.id}) }}">{{ tva.id }}</a></td>
                    <td>{{ tva.multiplicate }}</td>
                    <td>{{ tva.nom }}</td>
                    <td>{{ tva.valeur }}</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-default btn-sm" href="{{ path('admin_tva_show', {id: tva.id}) }}">
                                <i class="fa fa-file-o"></i> {{ 'show'|trans({}, 'admin') }}
                            </a>
                            <a class="btn btn-default btn-sm" href="{{ path('admin_tva_edit', {id: tva.id}) }}">
                                <i class="fa fa-edit"></i> {{ 'edit'|trans({}, 'admin') }}
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {{ knp_pagination_render(paginator) }}

    <ul class="new_entry list-unstyled">
        <li>
            <a class="btn btn-info" href="{{ path('admin_tva_new') }}">
                <i class="fa fa-plus"></i> {{ 'Create a new entry'|trans({}, 'admin') }}
            </a>
        </li>
    </ul>
    </div>
    </div>
      </div>

{% endblock %}
